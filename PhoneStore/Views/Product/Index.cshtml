@using PhoneStore.ViewModel
@model SupplierproductcatagoryViewmodel
<div class="my-2">
    <form asp-action="Index" class="row row-cols-lg-auto g-3 align-items-center">
        <div class="col-12">
            <label class="visually-hidden" for="catagorgsId">Catagory</label>
            <select class="form-select" id="catagorgsId" name="catagorgsId">
                <option selected>Catagory</option>
                @foreach (var Item in Model.categories)
                {
                    <option selected="@(Item.Cat_Id == Model.catagorgsId)" value="@Item.Cat_Id">@Item.Name</option>
                }
            </select>
        </div>
        <div class="col-12">
            <label class="visually-hidden" for="suppliersId">SUPPLIER</label>
            <select class="form-select" id="suppliersId" name="suppliersId">
                <option selected>SUPPLIER</option>
                @foreach (var Item in Model.suppliers)
                {
                    <option selected="@(Item.Id == Model.catagorgsId)" value="@Item.Id">@Item.Name</option>
                }
            </select>
        </div>

        <div class="col-12">
            <label class="visually-hidden" for="sterm">Search by title</label>
            <div class="input-group">
                <div class="input-group-text"></div>
                <input type="text" class="form-control" value="@Model.item" id="item" name="item" placeholder="Search by title">
            </div>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">Search</button>
            <a href="/Product/Index" class="btn btn-dark">Reset</a>
        </div>
    </form>
</div>
<a href="/product/new" style="color:mediumvioletred">Add New Prodct</a>
<div class="w-100 mt-4 d-flex flex-wrap ">
    @foreach (var Item in Model.Products)
    {
        <div class="card mx-3 mb-4" style="width: 15rem;">
            @if (string.IsNullOrEmpty(Item.Image))
            {
                <img style="width:100%;height:180px" src="/images/NoImage.png" class="card-img-top" alt="...">

            }
            else
            {
                <img style="width:100%;height:180px" src="/images/@Item.Image" class="card-img-top" alt="...">
            }
            <div class="card-body">
                <h5 class="card-title">@Item.Name</h5>
                <p class="card-text">
                    <b>Category: </b>@Item.Categorys.Name <br />
                    <b>Description: </b>@Item.Description <br />
                    <b>Price: </b>@Item.Price
                </p>
                <a onclick="return window.confirm('are you sure')" class="btn btn-primary" asp-area="" asp-controller="Product" asp-action="delete" asp-route-Id="@Item.Product_Id">delet</a>
                <a class="btn btn-primary" asp-area="" asp-controller="Product" asp-action="Edite" asp-route-Id="@Item.Product_Id">Edit</a>
                <a  class="btn btn-primary" asp-area="" asp-controller="Product" asp-action="Details" asp-route-Id="@Item.Product_Id">details</a>

            </div>
        </div>
    }
</div>
